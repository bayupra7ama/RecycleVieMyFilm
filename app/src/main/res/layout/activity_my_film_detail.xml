<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyFilmDetail"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ferrari" />
            <TextView
                android:id="@+id/img_nama_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:background="#4D000000"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:drawableStart="@drawable/ic_collections_white_18dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_judul_film"
            style="@style/TextContent.HeadlineMedium.Bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:text="@string/title"
            android:textAlignment="viewStart"
            android:textSize="32sp" />
        <TextView
           style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:layout_marginTop="6dp"
            android:text="@string/description"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:layout_marginTop="6dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/content"
            android:textAlignment="inherit" />

        <Button
            android:layout_marginTop="6dp"
            style="@style/ButtonGeneral.SecondaryVariant"
            android:text="@string/wathc_now"
            />
    </LinearLayout>

</ScrollView>